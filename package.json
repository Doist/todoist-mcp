{
    "name": "todoist-mcp",
    "version": "1.0.2",
    "main": "index.js",
    "type": "module",
    "bin": {
        "todoist-mcp": "./bin/index.js"
    },
    "scripts": {
        "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
        "format": "biome check --write",
        "prepare": "husky",
        "inspect": "npx @modelcontextprotocol/inspector node build/index.js"
    },
    "keywords": [
        "ai",
        "todoist",
        "productivity",
        "model-context-protocol",
        "claude",
        "task-management",
        "project-management"
    ],
    "author": "David Miotti",
    "license": "MIT",
    "description": "Connect this [Model Context Protocol](https://modelcontextprotocol.io/introduction) server to your LLM to interact with Todoist.",
    "dependencies": {
        "@doist/todoist-api-typescript": "4.0.2",
        "@modelcontextprotocol/sdk": "1.9.0",
        "posthog-node": "^4.12.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/node": "22.13.1",
        "husky": "9.1.7",
        "lint-staged": "15.4.3",
        "typescript": "5.7.3"
    },
    "lint-staged": {
        "*.{js,ts,json}": ["biome check --write"]
    }
}
